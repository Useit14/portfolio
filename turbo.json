{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "docker:build": {
      "dependsOn": ["build"],
      "cache": true,
      "inputs": [
        "$TURBO_DEFAULT$",
        ".dockerignore",
        "Dockerfile",
        "package.json",
        "package-lock.json"
      ],
      "outputs": ["dist/**", "docker-images/**"]
    },
    "deploy": {
      "dependsOn": ["docker:build"]
    }
  }
}
